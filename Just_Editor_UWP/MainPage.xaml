<Page
    x:Class="Just_Editor_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Just_Editor_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="{x:Bind CurrentConfig.CurrentTheme}"
    >
    <Page.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="ms-appx:///Assets/bgi"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Page.Background>
    <Grid x:Name="mainGrid" Background="{x:Bind CurrentConfig.BackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="34"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="titleRect" Fill="{x:Bind CurrentConfig.CoverBrush}"/>
        <local:DrnTabPanel HoverBrush="#90434343" SelectedColor="#CC343434" Grid.RowSpan="2"/>
    </Grid>
</Page>
