<Button
    x:Class="Just_Editor_UWP.DrnMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Just_Editor_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Background="#0000" BorderThickness="0">

    <Button.Flyout>
        <Flyout>
            <ListView x:Name="menuList" Background="#0000" SelectionChanged="menuList_SelectionChanged" Padding="0" SelectionMode="Single">
            </ListView>
        </Flyout>
    </Button.Flyout>
</Button>
